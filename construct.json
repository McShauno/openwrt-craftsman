{
    "name" : "openwrt-framer-sample-package",
    "version" : "0.01-alpha",
    "description" : "A sample openrt-framer build configuration for the Netgear R7800",
    "author" : "Shaun McDonnell <sm@eisoft.com> (http://about.me/shaunmcdonnell)",
    "contributors": [
        "John Doe",
        "Jane Doe"
    ],
